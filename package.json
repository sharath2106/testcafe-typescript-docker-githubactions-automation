{
  "name": "signavio-test-automation",
  "version": "1.0.0",
  "scripts": {
    "pretty-code": "npx prettier --write .",
    "eslint": "eslint **/*.ts --ignore-pattern node_modules/ --fix",
    "test-chrome": "testcafe chrome ./src/tests/",
    "test-firefox": "testcafe firefox ./src/tests/",
    "test": "testcafe ./src/tests/",
    "report": "allure generate allure/allure-results --clean && allure open allure-report"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "@types/faker": "^5.5.3",
    "faker": "^5.5.3",
    "eslint": "^7.32.0",
    "husky": "^7.0.2",
    "prettier": "^2.4.1",
    "testcafe": "^1.16.1",
    "testcafe-reporter-allure": "^1.0.5",
    "typescript": "^4.4.3",
    "log4js": "^6.3.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npx eslint --fix",
      "git add"
    ]
  }
}
